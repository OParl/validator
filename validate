import sys
from src.validator import Validator
from colorama import init
from optparse import OptionParser


def main():
    # TODO: switch over to argparse as optparse is deprecated
    parser = OptionParser("Usage: validate [options] oparl_endpoint")

    parser.add_option(
        "-r",
        "--redis",
        help="disable redis based caching",
        default=True,
        action="store_false"
    )

    parser.add_option(
        "-p",
        "--porcelain",
        help="disable colored output",
        default=False,
        action="store_true"
    )

    parser.add_option(
        "-l",
        "--log-output",
        help="store the validation output in a log file",
        default=False,
        action="store_true",
        dest="save_results"
    )

    parser.add_option(
        "-s",
        "--validate-schema",
        help="additionally validate each object against the json schema (This WILL take longer)",
        default=False,
        action="store_true",
        dest="validate_schema"
    )

    (options, args) = parser.parse_args()

    if len(args) != 1:
        parser.print_help()
        exit()

    # init colorama
    init(strip=options.porcelain, autoreset=True)

    validator = Validator(url=args[0], options=options)
    validator.validate()

if __name__ == "__main__":
    main()
