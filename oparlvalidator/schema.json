            },
            "oparlVersion": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "website": {
                "type": "string",
                "format": "uri"
            },
            "contactEmail": {
                "type": "string",
                "format": "email"
            },
            "contactName": {
                "type": "string"
            },
            "vendor": {
                "type": "string",
                "format": "uri"
            },
            "product": {
                "type": "string",
                "format": "uri"
            },
            "bodies": {
                "type": ["string", "array"],
                "oparl:linksTo": "oparl:Body"
            },
            "newObjects": {
                "type": "string",
                "format": "uri"
            },
            "updatedObjects": {
                "type": "string",
                "format": "uri"
            },
            "removedObjects": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": [
            "@type",
            "@id",
            "oparlVersion",
            "bodies"
        ],
        "oparl:recommended": [
            "name",
            "contactEmail",
            "contactName",
            "newObjects",
            "updatedObjects",
            "removedObjects"
        ],
        "oparl:optional": ["website", "vendor", "product"],
        "oparl:test": [
            {
                "section": "5.3.1",
                "message": "oparl:System.version must equal \"http://oparl.org/specs/1.0./\"",
                "test": "oparl.validator.schema:test_spec_version"
            },
            {
                "section": "5.3.1",
                "message": "oparl:System.contactEmail must have \"mailto:\" prefix",
                "test": "oparl.validator.schema:test_must_have_mailto_prefix"
            }
        ]
    },
