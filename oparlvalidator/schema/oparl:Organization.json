{
        "properties": {
            "@id": {
                "type": "string",
                "format": "uri"
            },
            "@type": {
                "type": "string",
                "pattern": "^oparl:Organization$"
            },
            "body": {
                "format": "uri",
                "oparl:linksTo": "oparl:Body",
                "type": "string"
            },
            "created": {
                "type": "string",
                "format": "date-time"
            },
            "keyword": {
                "items": {
                    "type": "string"
                },
                "type": "array"
            },
            "member": {
                "items": {
                    "format": "uri",
                    "oparl:linksTo": "oparl:Person",
                    "type": "string"
                },
                "type": "array"
            },
            "modified": {
                "type": "string",
                "format": "date-time"
            },
            "name": {
                "type": "string"
            },
            "shortName": {
                "type": "string"
            },
            "organiziationType": {
                "type": "string"
            },
            "post": {
                "items": {
                    "type": "string",
                    "format": "uri"
                },
                "type": "array"
            },
            "subOrganizationOf": {
                "format": "uri",
                "oparl:linksTo": "oparl:Organization",
                "type": "string"
            }
        },
        "required": [
            "@type",
            "@id",
            "body",
            "name",
            "member"
        ],
        "oparl:recommended": [
            "created",
            "lastModified"
        ],
        "oparl:validate": [
            {
                "message": "name and nameShort may not be equal",
                "section": "5.2.3",
                "method": "oparlvalidator.schema:name_not_equal_shortName"
            }
        ],
        "type": "object"
    }
